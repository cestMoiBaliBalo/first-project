@ECHO off
SETLOCAL
SET _cp=1252
FOR /F "usebackq delims=: tokens=2" %%I IN (`CHCP`) DO FOR /F "usebackq" %%J IN ('%%I') DO IF %%J NEQ %_cp% CHCP %_cp%
{% for src, dst in collection %}
    {% set switch = "CE" %}
    {% if loop.first %}
        {% set switch = "EC" %}
    {% endif %}
XXCOPY.EXE /{{ switch }} "{{ src }}" "{{ dst }}" /Y /oA:%_XXCOPYLOG%
{% endfor %}
ENDLOCAL
EXIT /B 0
